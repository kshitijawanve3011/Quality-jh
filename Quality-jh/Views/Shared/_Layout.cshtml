<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Jehangir Hospital Quality Control Document</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <nav class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
        <a class="navbar-brand col-md-3 col-lg-2 mr-0 px-3" href="#">Jehangir Hospital Quality Control Document</a>
        <button class="navbar-toggler position-absolute d-md-none collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
    </nav>

    <div class="row">
        <!-- Sidebar -->
        <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
            <div class="sidebar-sticky pt-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active" href="#">
                            <span data-feather="home"></span>
                            Quality Control
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-bs-toggle="collapse" href="#nabhSubmenu" role="button" aria-expanded="false" aria-controls="nabhSubmenu">
                            NABH Mandatory Traning
                        </a>
                        <div class="collapse" id="nabhSubmenu">
                            <ul class="nav flex-column pl-3">
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="NABHMandatoryTraning" asp-action="InFactionAndPrevantion">InfactionAndPrevention</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="NABHMandatoryTraning" asp-action="QualityAndPatientSafety">QualityAndPatientSafety </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="NABHMandatoryTraning" asp-action="SafetyTrainings">SafetyTrainings </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="NABHMandatoryTraning" asp-action="BasicLifeSupportBLS">BasicLifeSupportBLS </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="NABHMandatoryTraning" asp-action="ACC">ACC </a>
                                </li>
                            </ul>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-bs-toggle="collapse" href="#skillsSubmenu" role="button" aria-expanded="false" aria-controls="skillsSubmenu">
                            Soft Skill Training
                        </a>
                        <div class="collapse" id="skillsSubmenu">
                            <ul class="nav flex-column pl-3">
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="SoftSkillTraining" asp-action="Comprehending Without Biases">Comprehending Without Biases</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="SoftSkillTraining" asp-action="Handling Difficult Patients & Resolving Bad Attitudes">Handling Difficult Patients & Resolving Bad Attitudes</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="SoftSkillTraining" asp-action="Negotiation Skills">Negotiation Skills</a>
                                </li>
                            </ul>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main content -->
        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
               @*  <h1 class="h2">Jehangir Hospital Quality Control</h1> *@
            </div>

            <h3>Jehangir Virtual Learning Repository-(JVRL)</h3>
            @RenderBody()

        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Quality_jh - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
